{
  "name": "nengine",
  "version": "1.0.0",
  "description": "A next-generation text adventure system that combines the depth of classic interactive fiction with the narrative power of large language models.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "server": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts",
    "server:test": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=test-quest",
    "server:lovebug": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=lovebug",
    "server:heist": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=the-heist",
    "server:lantern": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=red-lantern-detective",
    "server:faerun": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=faerun-campaign",
    "server:space": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=space-trader",
    "server:dragon": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=dragon-realm",
    "server:classic": "node node_modules/nodemon/bin/nodemon.js --exec \"node node_modules/tsx/dist/cli.mjs\" src/index.ts --game=classic-quest",
    "client": "cd client && npm run dev",
    "dev": "concurrently --kill-others \"npm run server\" \"npm run client\"",
    "dev:test": "concurrently --kill-others \"npm run server:test\" \"npm run client\"",
    "dev:lovebug": "concurrently --kill-others \"npm run server:lovebug\" \"npm run client\"",
    "dev:heist": "concurrently --kill-others \"npm run server:heist\" \"npm run client\"",
    "dev:lantern": "concurrently --kill-others \"npm run server:lantern\" \"npm run client\"",
    "dev:faerun": "concurrently --kill-others \"npm run server:faerun\" \"npm run client\"",
    "dev:space": "concurrently --kill-others \"npm run server:space\" \"npm run client\"",
    "dev:dragon": "concurrently --kill-others \"npm run server:dragon\" \"npm run client\"",
    "dev:classic": "concurrently --kill-others \"npm run server:classic\" \"npm run client\"",
    "build": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onuse/nengine.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/onuse/nengine/issues"
  },
  "homepage": "https://github.com/onuse/nengine#readme",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "isomorphic-git": "^1.33.1",
    "ws": "^8.18.3",
    "yaml": "^2.8.1"
  }
}
